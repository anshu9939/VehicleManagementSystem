<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">
  <display-name>VehicleManagementSystem</display-name>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.common.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.common.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadVehicleServlet</servlet-name>
        <servlet-class>com.admin.UploadVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentVehicleServlet</servlet-name>
        <servlet-class>com.user.RentVehicleServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>ReturnVehicleServlet</servlet-name>
        <servlet-class>com.user.ReturnVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>com.user.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadVehicleServlet</servlet-name>
        <url-pattern>/admin/uploadVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentVehicleServlet</servlet-name>
        <url-pattern>/user/rentVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReturnVehicleServlet</servlet-name>
        <url-pattern>/user/returnVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/user/updateProfile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
